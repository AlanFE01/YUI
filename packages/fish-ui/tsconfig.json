{
    "compilerOptions": {
        "declaration": true, /* 生成相关的 '.d.ts' 文件。 */
        "declarationDir": "./dist/types", /* '.d.ts' 文件输出目录 */
        "jsx": "preserve",
        // fix: Cannot find global value 'Promise'
        "lib": [
            "es2018",
            "dom"
        ],
        "types": [
            "vitest",
            "vitest/globals"
        ]
    },
    "include": [
        "./*.*",
        "./shims-vue.d.ts", "src/entry.ts",
    ],
    "exclude": [
        "node_modules"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": "true",
    "allowImportingTsExtensions": "true"
}